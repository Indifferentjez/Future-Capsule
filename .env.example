# Supabase (required for auth and data)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Or use the new publishable key name:
# NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key

# Server-side only (cron, delivery, admin)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: secure link signing for /open/[id]
CAPSULE_OPEN_SECRET=

# Resend (email delivery)
RESEND_API_KEY=
RESEND_FROM=Time Capsule <onboarding@resend.dev>

# Cron (Vercel): set CRON_SECRET and use Authorization: Bearer <CRON_SECRET>
CRON_SECRET=

# App URL for email links (Vercel sets VERCEL_URL automatically)
NEXT_PUBLIC_APP_URL=
